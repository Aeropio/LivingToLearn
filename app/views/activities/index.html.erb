<% content_for :message_region do %>
  Actvity List
<% end %>

<% content_for :target_region do %>

<table>
  <tr>
    <th>Id</th>
    <th>User Id</th>
    <th>Name</th>
  </tr>

<% @activities.each do |activity| %>
  <tr>

    <td><%= activity.id %></td>
    <td><%= activity.user_id %></td>
    <td><%= activity.name %></td>

    <td><%= link_to 'Show Activity', activity %></td>
    <td><%= link_to 'Edit Activity', edit_activity_path(activity) %></td>
    <td><%= link_to 'Destroy Activity', activity, :confirm => 'Are you sure?', :method => :delete %></td>
    <td><%= link_to 'Time Log List', activity_time_logs_path(activity) %></td>

  </tr>
<% end %>
</table>
 
<br />
 
  <%= link_to 'New Activity', new_activity_path %>
<% end %>
