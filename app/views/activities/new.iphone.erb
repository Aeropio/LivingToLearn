<% content_for :head do-%>
  <style>
    div.activity-list-frame{
      margin: 20px
    }

    table td {
      padding: 5px
    }

    table td.link {
      font-size: 8px
    }

    div.activity-list-frame table {
      font-size: 20px
    }

    div.activity.level_0{
      font-size: 16px
      margin-left: 0px
    }
    div.activity.level_1{
      font-size: 14px
      margin-left: 5px
    }
    div.activity.level_2{
      font-size: 12px
      margin-left: 10px
    }
    div.activity.level_3{
      font-size: 10px
      margin-left: 15px
    }


  </style>
<% end %>

<%= Touch::Layouts::Application.netzke(self) do |config| %>

<% config.content_for :title do-%>
   LivingToLearn
<% end %>

<% config.content_for :target__title do-%>
  <% if @parent_activity %>
    Under  <%= @parent_activity.name %>
  <% else %>
    New Activity Section
  <% end %>
<% end %>

<% config.content_for :target__region do-%>
  <%= render 'form.html.erb' %>

<% end %>

<% end %>


