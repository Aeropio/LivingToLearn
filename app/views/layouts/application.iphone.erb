<!DOCTYPE HTML PUBLIC "-//W3C//Dtd HTML 4.01 Transitional//EN">
<html manifest="manifest.manifest">
<head>

<meta name="viewport" content="user-scalable=no, width=device-width, initial-scale=1.0, maximum-scale=1.0"/>
<meta name="apple-mobile-web-app-capable" content="yes" />

<meta name="apple-mobile-web-app-status-bar-style" content="black" />

<style>
  div.notice{
    margin: 20px
  }
  div.alert{
    margin: 20px
  }
  div.tab-region{
    margin: 10px
  }
</style>
<%= yield(:head) %>
<title>LivingToLearn - Your Family's Education Matters</title>
  <%= netzke_init :platform => :touch %>
  <%= csrf_meta_tag %>
<%= stylesheet_link_tag "application.iphone.css", :media => "all" %>

</head>
<script src = '/javascripts/tick.js'>
</script>

<script>
  function onLoad(){
    tick();
    <%= yield :onload_script -%>
  }
</script>

<body onLoad="onLoad()" style="<%=Screen.default.html_body_style%>">

<% if Screen.default.mode == :frame %>
  <% res = Screen.default.device.resolution %>
  <div width="<%=res[:width]%>px" height="<%=res[:height]%>px" >
<% end %>
    <div id='touch-netzke' class='netzke-component'></div>
<% if Rails.env == 'development' %>
  </div>
<% end %>
  <% 'yield' %>
</body>
</html>

